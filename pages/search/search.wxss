/* pages/search/search.wxss */
@import "../../fictionTemplate/fictionSingleTpl.wxss";
#searchPage{
  width:760rpx;
  min-height:1200rpx;
}
/*输入框外部box*/
.searchBox{
  position:relative;
  width:760rpx;
  height:80rpx;
  
}
/* 输入框样式 */
.searchBox .userInput{
  position:absolute;
  left:8rpx;
  top:0;
 width:616rpx;
 height:80rpx;
  box-shadow:2rpx 2rpx 10rpx 6rpx #ccc;
  text-indent:12rpx;
  border-top-right-radius: 12rpx;
  border-bottom-right-radius:12rpx;
}

.inputPlaceHolder{
  font-size:24rpx;
  letter-spacing:10rpx;
}
/* 提交按钮样式 */
.searchBox button#submitBtn{
  position:absolute;
  right:10rpx;
  top:0;
  padding:6rpx 34rpx;
   background-color:rgba(41, 41, 241, 0.8);
   color:#fff; 
   font-size:28rpx;
   outline:none;
   border:0;
   border-radius:12rpx;
}

/* 精品和搜索结果小说显示 */
#fictionShowBox{
 width:760rpx;
 margin-top:6rpx;
}

/* 精品推荐  */
.goodRecommend{
  width:760rpx;
}

 /* 切换推荐条 */
 .goodRecommend .goodBox{
   width:760rpx;
   height:74rpx;
   text-align:center;
   color:#fff;
   letter-spacing:10rpx;
   border-bottom:1px dashed #fff;
     background-image:-webkit-linear-gradient(left,rgb(50,50,50),rgba(0,0,0,0.4),rgb(50,50,50));
 }

.goodBox .goodText{
   float:left;
   width:200rpx;
   height:74rpx;
   line-height:74rpx;
}
.goodBox .goodSwitch{
   float:right;
    width:120rpx;
   height:74rpx;
   line-height:74rpx;
}

.goodBox::after{
  content:'';
  display:block;
  clear:both;
}

/* 精品小说列表 */
.goodFictionBox {
  width: 760rpx;
  padding-left:0;
  border-top: 1px solid transparent;

}

/* 精品小说单个*/
.goodFictionBox .fictionSingleBox {
  float:left;
  width: 368rpx;
  height: 428rpx;
  border: 4rpx solid transparent;
  background-color: black;
}

.goodFictionBox::after{
  content:'';
  display:block;
  clear:both;
}

/*搜索匹配列表*/
#searchTipBox{
  position:absolute;
  top:82rpx;
  left:0;
  width:240rpx;
  background-color:#000;
}

#searchTipBox .tipItem{
  width:240rpx;
  height:120rpx;
  line-height:120rpx;
  text-align:center;
  border:1rpx solid #ccc;
  margin:4rpx 0;
  color:#fff;
}